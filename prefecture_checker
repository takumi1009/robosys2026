if [ -t 0 ]; then
  echo "Usage: echo 都道府県名 | prefecture_checker" >&2
  exit 1
fi

read pref

case "$pref" in
  北海道) echo "北海道 札幌市" ;;

  青森県) echo "東北 青森市" ;;
  岩手県) echo "東北 盛岡市" ;;
  宮城県) echo "東北 仙台市" ;;
  秋田県) echo "東北 秋田市" ;;
  山形県) echo "東北 山形市" ;;
  福島県) echo "東北 福島市" ;;

  茨城県) echo "関東 水戸市" ;;
  栃木県) echo "関東 宇都宮市" ;;
  群馬県) echo "関東 前橋市" ;;
  埼玉県) echo "関東 さいたま市" ;;
  千葉県) echo "関東 千葉市" ;;
  東京都) echo "関東 新宿区" ;;
  神奈川県) echo "関東 横浜市" ;;

  新潟県) echo "中部 新潟市" ;;
  富山県) echo "中部 富山市" ;;
  石川県) echo "中部 金沢市" ;;
  福井県) echo "中部 福井市" ;;
  山梨県) echo "中部 甲府市" ;;
  長野県) echo "中部 長野市" ;;
  岐阜県) echo "中部 岐阜市" ;;
  静岡県) echo "中部 静岡市" ;;
  愛知県) echo "中部 名古屋市" ;;

  三重県) echo "近畿 津市" ;;
  滋賀県) echo "近畿 大津市" ;;
  京都府) echo "近畿 京都市" ;;
  大阪府) echo "近畿 大阪市" ;;
  兵庫県) echo "近畿 神戸市" ;;
  奈良県) echo "近畿 奈良市" ;;
  和歌山県) echo "近畿 和歌山市" ;;

  鳥取県) echo "中国 鳥取市" ;;
  島根県) echo "中国 松江市" ;;
  岡山県) echo "中国 岡山市" ;;
  広島県) echo "中国 広島市" ;;
  山口県) echo "中国 山口市" ;;

  徳島県) echo "四国 徳島市" ;;
  香川県) echo "四国 高松市" ;;
  愛媛県) echo "四国 松山市" ;;
  高知県) echo "四国 高知市" ;;

  福岡県) echo "九州 福岡市" ;;
  佐賀県) echo "九州 佐賀市" ;;
  長崎県) echo "九州 長崎市" ;;
  熊本県) echo "九州 熊本市" ;;
  大分県) echo "九州 大分市" ;;
  宮崎県) echo "九州 宮崎市" ;;
  鹿児島県) echo "九州 鹿児島市" ;;
  沖縄県) echo "九州 那覇市" ;;

  *)
    echo "Unknown prefecture: $pref" >&2
    exit 1 ;;
esac

